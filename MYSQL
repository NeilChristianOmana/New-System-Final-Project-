CREATE DATABASE barangay_incident_system;

USE barangay_incident_system;

CREATE TABLE incidentsFatal (
    incident_id INT AUTO_INCREMENT PRIMARY KEY,
    Incident_type VARCHAR(100) NOT NULL,
    Time_of_Incident TIME NOT NULL,
	Date_of_Incident INT NOT NULL,
	Location_or_Zone VARCHAR(255) NOT NULL,
    Persons_involve text,
    Persons_status VARCHAR(100),
	Description_of_incident TEXT,
    Date_recorded TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE accounts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL
);
