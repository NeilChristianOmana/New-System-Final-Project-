import java.sql.*;
import java.util.Scanner;

public class IncidentSystem {

    static final String URL = "jdbc:mysql://localhost:3306/barangay_incident_system?useSSL=false";
    static final String USER = "root";
    static final String PASSWORD = "neil@2005";

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        try (Connection conn = DriverManager.getConnection(URL, USER, PASSWORD)) {
            System.out.println("Connected");

            while (true) {
                System.out.println("BARANGAY INCIDENT SYSTEM");
                System.out.println("1. Add Incident");
                System.out.println("2. Edit Incident");
                System.out.println("3. Delete Incident");
                System.out.println("4. View All Incidents");
                System.out.println("5. Search Incident by ID");
                System.out.println("6. Exit");
                System.out.print("Choose option: ");
                int choice = sc.nextInt();
                sc.nextLine();

                switch (choice) {
                    case 1 -> addIncident(conn, sc);
                    case 2 -> editIncident(conn, sc);
                    case 3 -> deleteIncident(conn, sc);
                    case 4 -> viewIncidents(conn);
                    case 5 -> searchIncident(conn, sc);
                    case 6 -> {
                        System.out.println("Exiting system...");
                        return;
                    }
                    default -> System.out.println("Invalid");
                }
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
    private static void addIncident(Connection conn, Scanner sc) throws SQLException {
        System.out.print("Incident Type: ");
        String type = sc.nextLine();

        System.out.print("Time of Incident (HH:MM): ");
        String time = sc.nextLine();

        System.out.print("Date of Incident (YYYY/MM/DD): ");
        int date = sc.nextInt();
        sc.nextLine();

        System.out.print("Location or Zone: ");
        String location = sc.nextLine();

        System.out.print("Persons Involved: ");
        String persons = sc.nextLine();

        System.out.print("Persons Status: ");
        String status = sc.nextLine();

        System.out.print("Description of Incident: ");
        String desc = sc.nextLine();

        String sql = "INSERT INTO incidentsFatal (Incident_type, Time_of_Incident, Date_of_Incident, Location_or_Zone, Persons_involve, Persons_status, Description_of_incident) VALUES (?, ?, ?, ?, ?, ?, ?)";
        try (PreparedStatement ps = conn.prepareStatement(sql)) {
            ps.setString(1, type);
            ps.setString(2, time);
            ps.setInt(3, date);
            ps.setString(4, location);
            ps.setString(5, persons);
            ps.setString(6, status);
            ps.setString(7, desc);
            ps.executeUpdate();
            System.out.println("Incident added");
        }
    }
    private static void editIncident(Connection conn, Scanner sc) throws SQLException {
        System.out.print("Enter Incident ID to edit: ");
        int id = sc.nextInt();
        sc.nextLine();

        System.out.print("New Incident Type: ");
        String type = sc.nextLine();

        System.out.print("New Time of Incident (HH:MM): ");
        String time = sc.nextLine();

        System.out.print("New Date of Incident (YYYY/MM/DD): ");
        int date = sc.nextInt();
        sc.nextLine();

        System.out.print("New Location or Zone: ");
        String location = sc.nextLine();

        System.out.print("New Persons Involved: ");
        String persons = sc.nextLine();

        System.out.print("New Persons Status: ");
        String status = sc.nextLine();

        System.out.print("New Description of Incident: ");
        String desc = sc.nextLine();

        String sql = """
                UPDATE incidentsFatal
                SET Incident_type=?, Time_of_Incident=?, Date_of_Incident=?, Location_or_Zone=?, 
                    Persons_involve=?, Persons_status=?, Description_of_incident=?
                WHERE incident_id=?""";
        try (PreparedStatement ps = conn.prepareStatement(sql)) {
            ps.setString(1, type);
            ps.setString(2, time);
            ps.setInt(3, date);
            ps.setString(4, location);
            ps.setString(5, persons);
            ps.setString(6, status);
            ps.setString(7, desc);
            ps.setInt(8, id);

            int rows = ps.executeUpdate();
            if (rows > 0) System.out.println("Incident Edited");
            else System.out.println("No record found");
        }
    }
    private static void deleteIncident(Connection conn, Scanner sc) throws SQLException {
        System.out.print("Enter Incident ID to delete: ");
        int id = sc.nextInt();
        sc.nextLine();

        String sql = "DELETE FROM incidentsFatal WHERE incident_id=?";
        try (PreparedStatement ps = conn.prepareStatement(sql)) {
            ps.setInt(1, id);
            int rows = ps.executeUpdate();
            if (rows > 0) System.out.println("Incident deleted");
            else System.out.println("No record.");
        }
    }
    private static void viewIncidents(Connection conn) throws SQLException {
        String sql = "SELECT * FROM incidentsFatal";
        try (Statement st = conn.createStatement(); ResultSet rs = st.executeQuery(sql)) {
            System.out.println("All Incidents");
            while (rs.next()) {
                System.out.println("ID: " + rs.getInt("incident_id"));
                System.out.println("Type: " + rs.getString("Incident_type"));
                System.out.println("Time: " + rs.getTime("Time_of_Incident"));
                System.out.println("Date: " + rs.getInt("Date_of_Incident"));
                System.out.println("Location: " + rs.getString("Location_or_Zone"));
                System.out.println("Persons: " + rs.getString("Persons_involve"));
                System.out.println("Status: " + rs.getString("Persons_status"));
                System.out.println("Description: " + rs.getString("Description_of_incident"));
                System.out.println("Date Recorded: " + rs.getTimestamp("Date_recorded"));
            }
        }
    }
    private static void searchIncident(Connection conn, Scanner sc) throws SQLException {
        System.out.print("Enter Incident ID: ");
        int id = sc.nextInt();
        sc.nextLine();

        String sql = "SELECT * FROM incidentsFatal WHERE incident_id=?";
        try (PreparedStatement ps = conn.prepareStatement(sql)) {
            ps.setInt(1, id);
            try (ResultSet rs = ps.executeQuery()) {
                if (rs.next()) {
                    System.out.println("Incident ID: " + rs.getInt("incident_id"));
                    System.out.println("Type: " + rs.getString("Incident_type"));
                    System.out.println("Time: " + rs.getTime("Time_of_Incident"));
                    System.out.println("Date: " + rs.getInt("Date_of_Incident"));
                    System.out.println("Location: " + rs.getString("Location_or_Zone"));
                    System.out.println("Persons: " + rs.getString("Persons_involve"));
                    System.out.println("Status: " + rs.getString("Persons_status"));
                    System.out.println("Description: " + rs.getString("Description_of_incident"));
                } else {
                    System.out.println("No incident found.");
                }
            }
        }
    }
}
